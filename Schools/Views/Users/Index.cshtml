@model IEnumerable<Users>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Users" asp-action="CreateUsers" class="btn btn-primary" style="width:250px">
                Create New User
            </a>
        </div>
    </div>
</div>
<table class="table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>School</th>
            <th>Full Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>
                <label>Action</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="100">
                    @obj.SchoolsId
                </td>
                <td width="50">
                    @obj.FullName
                </td>
                <td width="50">
                    @obj.Address
                </td>
                <td width="50">
                    @obj.Phone
                </td>
                <td width="50" class="justify-content-end">

                    <a asp-controller="Users" asp-action="EditUsers" asp-route-id="@obj.UsersId" class="btn btn-success btn-mini"><i class="fas fa-edit"> Edit</i></a>
                    <a asp-controller="Users" asp-action="DeleteUsers" asp-route-id="@obj.UsersId" class="btn btn-danger btn-mini"><i class="fas fa-trash-alt"> Delete</i></a>

                </td>
            </tr>
        }
    </tbody>
</table>



