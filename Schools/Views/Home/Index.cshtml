@model Login
@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/styles.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="d-block">
            <h3><i class="fas fa-user"></i> <span class="text-danger text-center">Welcome to School Records</span></h3>
            <div class="container">
                <div class="row justify-content-center mt-5">
                    <div class="mb-3 col-lg-6 col-5">
                        
                        <div class="login-form">

                            <form method="post" class="w-50">
                                <h5 class="text-center text-warning"><i class="fas fa-user">  School Login</i></h5>
                                <div class="card border-2 border-primary" style="width:20rem; border-radius:20px">
                                    <div class="card-title">
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-2">
                                            <label><i class="fas fa-user"> Username</i></label>
                                            <input type="text" class="form-control" placeholder="Username" />
                                        </div>
                                        <div class="mb-2">
                                            <label><i class="fas fa-lock"> Password</i></label>
                                            <input type="password" class="form-control" placeholder="Password" />
                                        </div>
                                        <div class="mb-2">
                                            <button type="submit" class="btn btn-success" style="width:290px">Login</button>
                                        </div>
                                        <div class="mb-2">
                                            <a href="" class="text-danger">Forgot Password</a>
                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>

                    </div>
                    <div class="mb-3 col-lg-6 col-5">
                        <div class="login-form">

                            <form method="post" class="w-50">
                                <h5 class="text-center text-warning"><i class="fas fa-user">  Student/Parent Login</i></h5>
                                <div class="card border-2 border-primary" style="width:20rem; border-radius:20px">
                                    <div class="card-title">
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-2">
                                            <label><i class="fas fa-user"> Username</i></label>
                                            <input type="text" class="form-control" placeholder="Username" />
                                        </div>
                                        <div class="mb-2">
                                            <label><i class="fas fa-lock"> Password</i></label>
                                            <input type="password" class="form-control" placeholder="Password" />
                                        </div>
                                        <div class="mb-2">
                                            <button type="submit" class="btn btn-success" style="width:290px">Login</button>
                                        </div>
                                        <div class="mb-2">
                                            <a href="" class="text-danger">Forgot Password</a>
                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

